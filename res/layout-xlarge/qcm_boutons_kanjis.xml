<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:stretchColumns="1" >

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:background="#8F8F8D"
        android:height="250dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/kanji"
            android:textColor="#ffffff"
            android:textSize="25dp"
            android:textStyle="bold"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|fill_horizontal"
            android:layout_weight="0"
            android:gravity="center"
            android:text="@string/kanji"
            android:textColor="#ffffff"
            android:textSize="25dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/addSuppr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="0"
            android:background="@android:drawable/btn_star_big_off" />
    </TableRow>

    <TableRow
        android:layout_marginBottom="-8dp"
        android:gravity="center" >

        <Button
            android:id="@+id/rep1"
            android:layout_width="00dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textSize="25dp" />

        <Button
            android:id="@+id/rep2"
            android:layout_width="00dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginLeft="-8dp"
            android:layout_weight="1"
            android:textSize="25dp" />
    </TableRow>

    <TableRow
        android:layout_marginBottom="-8dp"
        android:gravity="center" >

        <Button
            android:id="@+id/rep3"
            android:layout_width="00dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textSize="25dp" >
        </Button>

        <Button
            android:id="@+id/rep4"
            android:layout_width="00dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginLeft="-8dp"
            android:layout_weight="1"
            android:textSize="25dp" >
        </Button>
    </TableRow>

    <TableRow
        android:layout_marginLeft="200dp"
        android:layout_marginRight="200dp"
        android:gravity="center" >

        <Button
            android:id="@+id/k1"
            android:layout_width="00dp"
            android:layout_height="250dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:background="@drawable/kanji6" />
    </TableRow>

    <TableRow
        android:layout_width="00dp"
        android:layout_height="100dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:background="#8F8F8D"
        android:height="150dp" >

        <Button
            android:id="@+id/menu"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="#8F8F8D"
            android:focusableInTouchMode="true"
            android:longClickable="true"
            android:text="@string/menu"
            android:textColor="#ffffff"
            android:textSize="25dp" />

        <TableLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#8F8F8D"
            android:gravity="center"
            android:stretchColumns="1" >

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#8F8F8D" >

                <TextView
                    android:id="@+id/pts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text="@string/points"
                    android:textColor="#ffffff"
                    android:textSize="15dp"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#8F8F8D" >

                <ProgressBar
                    android:id="@+id/ProgressBarScore"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:indeterminate="false"
                    android:max="100"
                    android:minWidth="450dip" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#8F8F8D" >

                <TextView
                    android:id="@+id/kanji"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/kanji"
                    android:textColor="#ffffff"
                    android:textSize="15dp"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow android:background="#8F8F8D" >

                <ProgressBar
                    android:id="@+id/ProgressBarKanji"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </TableRow>
        </TableLayout>

        <ImageButton
            android:id="@+id/next"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:background="@null"
            android:contentDescription="@string/next"
            android:src="@drawable/next_display"
            android:visibility="invisible" />

        <!--  -->

        <ImageButton
            android:id="@+id/ok"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:background="@null"
            android:contentDescription="@string/ok"
            android:visibility="gone"
            android:src="@drawable/ok_display" />

    </TableRow>

</TableLayout>